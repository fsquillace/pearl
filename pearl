# Usage: source pearl OR bash --rcfile pearl

################################ CHECKS #################################

# If not running interactively, don't do anything
[ -z "$PS1" ] && return
[[ $- != *i* ]] && return

if [ "${BASH_ARGV}" = "" ]; then
    die "Error the correct usage is: source $0 OR bash --rcfile $0"
fi

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

################################ IMPORTS #################################
export PEARL_ROOT=$(dirname $(readlink -f "${BASH_ARGV[0]}"))
if [ ! -d "$PEARL_ROOT" ]; then
    error "Error: Could not set PEARL_ROOT env because $PEARL_ROOT does not exist."
    return 1
fi
source $PEARL_ROOT/lib/utils.sh
source $PEARL_ROOT/lib/core/system.sh
source $PEARL_ROOT/lib/core/module.sh

################################# VARIABLES ##############################
export PEARL_HOME=~/.config/pearl
export PEARL_TEMPORARY=$PEARL_HOME/tmp/`tty`
mkdir -p $PEARL_TEMPORARY
export PATH=$PEARL_ROOT/bin:$PATH

################################# MAIN ##############################
pearl_init

pearl_load_modules

# Remove all pearl_* functions
for func in $(compgen -abck pearl_ | tr "\n" " ")
do
    unset -f "$func"
done

trap "source $PEARL_ROOT/pearl" USR1
